<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blankFragment">

    <fragment
        android:id="@+id/blankFragment"
        android:name="com.utad.ud2_ej.BlankFragment"
        android:label="Bienvenido a la AplicaciÃ³n"
        tools:layout="@layout/fragment_blank">
        <action
            android:id="@+id/action_blankFragment_to_login2"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_blankFragment_to_registro"
            app:destination="@id/registro"
            />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.utad.ud2_ej.Login"
        android:label="Introduce tus credenciales"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_homeFragment2"
            app:destination="@id/homeFragment2"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/registro"
        android:name="com.utad.ud2_ej.Registro"
        android:label="Registrate en nuestra APP"
        tools:layout="@layout/fragment_registro">
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_registro_to_homeFragment2"
            app:destination="@id/homeFragment2"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment2"
        android:name="com.utad.ud2_ej.HomeFragment2"
        android:label="Home"
        tools:layout="@layout/fragment_home2" >
        <argument
            android:name="origen_login"
            app:argType="boolean" />
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <argument
            android:name="nombre"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="apellidos"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="fecha_nacimiento"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>